;===========================================================================
; map_ecc_to_radii
;
;===========================================================================
function map_ecc_to_radii, ecc
 
 nt = n_elements(ecc)

 radii = dblarr(3, nt)

 radii[0:1,*] = 1d
 radii[2,*] = sqrt(1d - ecc^2)

 return, radii
end
;===========================================================================
