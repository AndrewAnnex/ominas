pro pgs_count_descriptors, xds, nd=nd, nt=nt

 dim = size(xds, /dim)
 nd = 1
 if(dim[0] NE 0) then nd = dim[0]
 nt = 1
 if(n_elements(dim) GT 1) then nt = dim[1]

end
