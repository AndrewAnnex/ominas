pro pgs_scan_data, pp, points=points, $
                       vectors=vectors, $
                       flags=flags, $
                       data=data, $
                       cc=cc

 pgs_points, pp, points=points, $
                 vectors=vectors, $
                 flags=flags, $
                 data=data

