 if(NOT keyword_set(pds)) then pd = gd.pd $
 else pd = pds

 overwrite = 1
 nrd = n_elements(gd.rd)

 ;--------------------------------
 ; compute points
 ;--------------------------------
 ring_ps = pg_disk(cd=gd.cd, dkx=gd.rd, gbx=pd, fov=fov, npoints=npoints)
