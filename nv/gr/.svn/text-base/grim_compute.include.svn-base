 if(NOT pgs_valid(ring_ps)) then return, 0

 ps = reform(ring_ps, 2,nrd, /over)
 if(keyword_set(hide_ps_shad)) then $
               ps = append_array(ps, reform(hide_ps_shad, 2,nrd, /over))
