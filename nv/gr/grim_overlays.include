;=============================================================================
; grim_add_indexed_array
;
;=============================================================================
pro grim_add_indexed_array, psp, p, ps=ps, $
           nointerp=nointerp, spacing=spacing, flags=flags, label=label

 if(NOT keyword_set(spacing)) then spacing = 1


 np = n_elements(p)/2

 ;-----------------------------------------
 ; interpolate 
 ;-----------------------------------------
 pp = p
 if(np GT 1) then $
  begin
   q1 = convert_coord(/device, /to_data, 0, 0)
   q2 = convert_coord(/device, /to_data, 1, 1)
   sample = abs(q1[0]-q2[0])*spacing

   if(NOT keyword_set(nointerp)) then pp = p_sample(p, sample) $
   else pp = p
  end

 ;-----------------------------------------
 ; set up array pointer
 ;-----------------------------------------
 if(NOT keyword_set(label)) then $
                        label = grim_unique_array_label(psp, prefix=prefix)

 ps = ps_init(p=pp, $
        uname='GRIM_INDEXED_ARRAY_LABEL', $
        udata=label)


 ;----------------------------------------------------------------
 ; find the first free slot and add the array
 ;----------------------------------------------------------------
 w = where(ps_valid(*psp) EQ 0)
 if(w[0] NE -1) then (*psp)[w[0]] = ps $
 else *psp = [*psp, ps]

 if(defined(flags)) then ps_set_flags, ps, flags

end
