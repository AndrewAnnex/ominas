;=============================================================================
; grim_image_to_surface
;
;=============================================================================
function grim_image_to_surface, grim_data, plane, image_pts, $
                         far_pts=surf_pts_far, names=names, valid=valid
@grim_block.include
@ps_include.pro


 cd = *plane.cd_p

 np = n_elements(image_pts)/2
 names = strarr(np)
 surf_pts = dblarr(np,3)


 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 ; map
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 if(grim_test_map(grim_data)) then $
  begin
   map_pts = map_image_to_map(cd, image_pts, valid=valid)
   if(valid[0] NE -1) then $
    begin
     surf_pts[valid,*] = map_to_surface(cd, 0, map_pts[*,valid])
     names[valid] = cor_name(cd)
    end
  end $
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 ; otherwise test all bodies
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 else $
  begin
   surf_pts_far = dblarr(np,3)

   bx = grim_cat_bodies(plane)
   nbx = n_elements(bx)

   raytrace, image_pts, cd=cd, bx=bx, hit_indices=ii, $
                 range_matrix=dist, hit_matrix=near_pts, far_matrix=far_pts
   valid = -1

   bx = bx[ii]
   valid = where(ii NE -1)
   nvalid = n_elements(valid)

   if(valid[0] NE -1) then $
    begin
     names[valid] = cor_name(bx[valid])
     surf_pts[valid,*] = $
                transpose(body_to_surface(bx[valid], $
                           reform(transpose(near_pts[valid,*]), 1,3,nvalid)))
     surf_pts_far[valid,*] = $
                transpose(body_to_surface(bx[valid], $
                           reform(transpose(far_pts[valid,*]), 1,3,nvalid)))
    end


   ;- - - - - - - - - - - - - - - - - - - - - - - - -
   ; any unaccounted for points go to the sky
   ;- - - - - - - - - - - - - - - - - - - - - - - - -
   w = complement(ii, valid)
   if(w[0] NE -1) then $
    begin
     names[w] = 'SKY'
     surf_pts[w,*] = image_to_radec(cd, image_pts[*,w])
    end

  end 


 return, surf_pts
end
