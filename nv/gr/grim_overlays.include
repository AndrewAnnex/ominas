;=============================================================================
; grim_surface_to_image
;
;=============================================================================
function grim_surface_to_image, grim_data, plane, surf_pts, names, valid=valid
@grim_block.include
@ps_include.pro

 cd = *plane.cd_p

 np = n_elements(surf_pts)/3

 image_pts = dblarr(2,np)
 flags = bytarr(np)

 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 ; map 
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 if(grim_test_map(grim_data)) then $
  begin
   name = cor_name(cd)   
   valid = where(names EQ name)

   if(valid[0] NE -1) then $
          image_pts[*,valid] = surface_to_image(cd, 0, surf_pts[valid,*])

   flags[valid] = 1
  end $
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 ; non-map 
 ;- - - - - - - - - - - - - - - - - - - - - - - - -
 else $
  begin
   bx = grim_cat_bodies(plane)
   all_names = cor_name(bx)
   flags[*] = 1

   for k=0, n_elements(all_names)-1 do $
    begin
     w = where(names EQ all_names[k])
     if(w[0] NE -1) then $
	   image_pts[*,w] = surface_to_image(cd, bx[k], surf_pts[w,*], $
                                                            body_pts=body_pts)
     r = bod_inertial_to_body_pos(bx[k], bod_pos(cd))
     sub = glb_hide_points_limb(bx[k], r, body_pts)
     if(sub[0] NE -1) then flags[sub] = 0
    end

   ;- - - - - - - - - - - - - - - - - - - - - - - - -
   ; sky points 
   ;- - - - - - - - - - - - - - - - - - - - - - - - -
   w = where(names EQ 'SKY')
   if(w[0] NE -1) then image_pts[*,w] = radec_to_image(cd, surf_pts[w,*])
  end

 valid = where(flags EQ 1)

 return, image_pts
end
