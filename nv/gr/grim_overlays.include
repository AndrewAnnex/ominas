;
;=============================================================================
function grim_get_overlay_update_flag, ps

 if(NOT keyword_set(ps)) then return, 0

 nps = n_elements(ps)
 vals = bytarr(nps)

 for i=0, nps-1 do vals[i] = ps_udata(ps[i], 'GRIM_UPDATE_FLAG')

 return, vals
end
