;=============================================================================
; grim_push_indexed_array
;
;=============================================================================
pro grim_push_indexed_array, grim_data, ps, name
@grim_block.include
@ps_include.pro

 if(NOT keyword_set(_all_tops)) then return

 plane = grim_get_plane(grim_data)
 
 top = _top
 tops = _all_tops
 ntops = n_elements(tops)

 ;-------------------------------------------------
 ; project arrays in other planes and windows
 ;-------------------------------------------------
 for i=0, ntops-1 do $
  begin
   _grim_data = grim_get_data(tops[i])
   _planes = grim_get_plane(_grim_data, /all)

   for ii=0, n_elements(_planes)-1 do $
    begin
     fields = tag_names(_grim_data)
     ii_syncing = where(fields EQ name+'_SYNCING')

     if(_grim_data.(ii_syncing) OR grim_data.(ii_syncing)) then $
      if((tops[i] NE top) OR (_planes[ii].pn NE plane.pn)) then $
       begin
        _psp = grim_get_indexed_array(_planes[ii], name)
        grim_sync_indexed_array, grim_data, plane, ps, _grim_data, _planes[ii], _psp
       end
    end
   if(tops[i] NE top) then grim_refresh, _grim_data, /use_pixmap
  end

 grim_data = grim_get_data(top)

end
