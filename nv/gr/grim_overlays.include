pro grim_set_overlay_update_flag, ps, value

 if(NOT keyword_set(ps)) then return

 nps = n_elements(ps)
 for i=0, nps-1 do if(ptr_valid(ps[i])) then $
   ps_set_udata, ps[i], name='GRIM_UPDATE_FLAG', value, /noevent

end
