;=============================================================================
; nv_set_nhist
;
;=============================================================================
pro nv_set_nhist, ddp, nhist
@nv.include
 dd = nv_dereference(ddp)

 dap = dd.data_dap
 data_archive_set, dap, nhist=nhist
 dd.data_dap = dap

 dd.dap_index = dd.dap_index < (nhist-1) > 0

 nv_rereference, ddp, dd
 nv_notify, ddp, type = 0
 nv_notify, /flush
end
;===========================================================================
