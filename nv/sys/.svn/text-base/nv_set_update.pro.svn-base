;=============================================================================
; nv_set_update
;
;=============================================================================
pro nv_set_update, ddp, update
@nv.include
 dd = nv_dereference(ddp)

 dd.update = update

 nv_rereference, ddp, dd
 nv_notify, ddp, type = 0
 nv_notify, /flush
end
;===========================================================================
