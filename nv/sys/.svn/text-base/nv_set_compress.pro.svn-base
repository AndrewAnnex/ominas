;=============================================================================
; nv_set_compress
;
;=============================================================================
pro nv_set_compress, ddp, compress
@nv.include
 data = nv_data(ddp)

 dd = nv_dereference(ddp)
 dd.compress = compress
 nv_rereference, ddp, dd

 nv_set_data, ddp, data, /silent	; this will trigger the data event
end
;===========================================================================
