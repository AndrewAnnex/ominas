;===========================================================================
; class_get_tree
;
;===========================================================================
function class_get_tree, odp
 od = nv_dereference(odp)

 repeat $
  begin
   classes = append_array(classes, od.class)
   if(size(od[0].(0), /type) NE 10) then return, classes
   od = *(od[0].(0))
  endrep until(0)

end
