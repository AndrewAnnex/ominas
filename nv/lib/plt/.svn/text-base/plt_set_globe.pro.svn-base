pro plt_set_globe, pxp, gbdp
@nv_lib.include
 pdp = class_extract(pxp, 'PLANET')
 pd = nv_dereference(pdp)

 pd.gbd=gbdp

 nv_rereference, pdp, pd
 nv_notify, pdp, type = 0
end
;===========================================================================



