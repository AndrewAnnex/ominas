;==============================================================================
; stn_clone_descriptor
;
;
;==============================================================================
function stn_clone_descriptor, stdp
@nv_lib.include
 nv_notify, stdp, type = 1
 std = nv_dereference(stdp)

 new_std = std
 new_std.bd = bod_clone_descriptor(std.bd)

 new_stdp = ptrarr(n_elements(std))
 nv_rereference, new_stdp, new_std

 return, new_stdp
end
;==============================================================================
