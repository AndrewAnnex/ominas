;===========================================================================
; cam_set_filters
;
;
;===========================================================================
pro cam_set_filters, cxp, filter, i
@nv_lib.include
 cdp = class_extract(cxp, 'CAMERA')
 cd = nv_dereference(cdp)

 if(NOT defined(i)) then cd.filters = filter $
 else cd.filters[i] = filter

 nv_rereference, cdp, cd
 nv_notify, cdp, type = 0
end
;===========================================================================


