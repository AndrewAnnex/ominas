;===========================================================================
; cam_filters
;
;
;===========================================================================
function cam_filters, cxp, i
@nv_lib.include
 cdp = class_extract(cxp, 'CAMERA')
 nv_notify, cdp, type = 1
 cd = nv_dereference(cdp)

 if(NOT defined(i)) then i = where(cd.filters NE '')
 if(i[0] EQ -1) then return, ''
 return, cd.filters[i]
end
;===========================================================================



