;===========================================================================
; cam_evolve
;
;  Input  : array (nbd) of camera descriptor (pointers)
;  Output : array (nbd, ndt) of camera descriptor (pointers)
;
;===========================================================================
function cam_evolve, cxp, dt, nodv=nodv
@nv_lib.include
 cdp = class_extract(cxp, 'CAMERA')
 cds = nv_dereference(cdp)

 ndt = n_elements(dt)
 ncd = n_elements(cds)


 tcds = _cam_evolve(cds, dt, nodv=nodv)


 tcdps = ptrarr(ncd, ndt)
 nv_rereference, tcdps, tcds

 return, tcdps
end
;===========================================================================



