;===========================================================================
; cam_psf_attrib
;
;
;===========================================================================
pro cam_psf_attrib, cd, fwhm=fwhm
@nv_lib.include

 psf = cam_psf(cd, /default, /one)
 if(NOT keyword_set(psf)) then return

 n = n_elements(psf)
 zz = 10.
 psf = cam_psf(cd, (dindgen(n*zz)-0.5*(n*zz))/zz, /one)

 max = max(psf)
 hmax = 0.5d*max
 ww = where(psf GE hmax)
 fwhm = (max(ww) - min(ww))/zz
end
;===========================================================================
