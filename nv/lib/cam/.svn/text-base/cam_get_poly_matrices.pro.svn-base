;===========================================================================
; cam_get_poly_matrices
;
;
;===========================================================================
pro cam_get_poly_matrices, cxp, XX, YY, PP, QQ
@nv_lib.include
 cdp = class_extract(cxp, 'CAMERA')
 cd = nv_dereference(cdp)

 ;---------------------------------------------------------
 ; distortion matrices and inverses are in fn_data
 ;---------------------------------------------------------
 XX = *(*(cd.fn_data_p))[0] 
 YY = *(*(cd.fn_data_p))[1]
 PP = *(*(cd.fn_data_p))[2] 
 QQ = *(*(cd.fn_data_p))[3]

end
;===========================================================================



