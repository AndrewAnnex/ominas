pro _str_copy_descriptor, sdp_dst, sdp_src
 nv_notify, sdp_src, type = 1
 new_sd = nv_dereference(sdp_src)

 glb_copy_descriptor, new_sd.gbd, str_globe(sdp_src)

 nv_rereference, sdp_dst, new_sd
 nv_notify, sdp_dst
end
