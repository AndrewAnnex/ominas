;===========================================================================
; str_set_lum
;
;
;===========================================================================
pro str_set_lum, sxp, lum
@nv_lib.include
 sdp = class_extract(sxp, 'STAR')
 sd = nv_dereference(sdp)

 sd.lum=lum

 nv_rereference, sdp, sd
 nv_notify, sdp, type = 0
end
;===========================================================================



