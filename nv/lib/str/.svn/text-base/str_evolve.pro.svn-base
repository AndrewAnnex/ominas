;===========================================================================
; str_evolve
;
;  Input  : array (nbd) of star descriptor (pointers)
;  Output : array (nbd, ndt) of star descriptor (pointers)
;
;===========================================================================
function str_evolve, sxp, dt, nodv=nodv
@nv_lib.include
 sdp = class_extract(sxp, 'STAR')
 sds = nv_dereference(sdp)

 ndt = n_elements(dt)
 nsd = n_elements(sds)


 tsds = _str_evolve(sds, dt, nodv=nodv)


 tsdps = ptrarr(nsd, ndt)
 nv_rereference, tsdps, tsds

 return, tsdps
end
;===========================================================================



