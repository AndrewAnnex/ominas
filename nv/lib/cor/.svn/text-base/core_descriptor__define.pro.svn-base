pro core_descriptor__define

 struct = $
    { core_descriptor, $
	class:		 '', $			; Name of descriptor class
        sn:              0l, $                  ; Descriptor serial number
	tasks_p:	 ptr_new(), $		; pointer to task list 
	idp:		 ptr_new(), $		; ID pointer.
	name:		 '', $			; Name of object
	udata_tlp:	 ptr_new(), $		; pointer to user data
	user:		 '' $			; name of user
    }

end
