;=============================================================================
; stellab_radec
;
;  Observer assumed to be at the origin with zero velocity.
;
;=============================================================================
function stellab_radec, radec, vel, c=c

 bd = bod_inertial()
 pos = bod_radec_to_body(bd, radec)
 pos_cor = stellab_pos(pos, vel, c=c)
 radec_cor = bod_body_to_radec(bd, pos_cor)

 return, radec_cor
end
;=============================================================================
