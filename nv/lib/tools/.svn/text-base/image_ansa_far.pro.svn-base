;===================================================================================
; image_ansa_far
;
;===================================================================================
function image_ansa_far, cd, rd

 z = (bod_orient(rd))[2,*]
 c = (bod_orient(cd))[1,*]

 a1 = bod_inertial_to_body(rd, v_unit(v_cross(c,z)))
 a2 = -a1

 dsk_pts = dsk_body_to_disk(rd, [a1, a2], frame=rd)
 lons = dsk_pts[*,1]

 return, lons
end
;===================================================================================
