;=============================================================================
; get_object_by_name
;
;
;=============================================================================
function get_object_by_name, xds, name

 if(NOT keyword_set(name)) then return, xds

 names = cor_name(xds)
 w = where(names EQ strupcase(name[0]))
 if(w[0] EQ -1) then return, 0

 return, xds[w]
end
;=============================================================================
