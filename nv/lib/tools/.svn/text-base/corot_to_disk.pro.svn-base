function corot_to_disk, corot_pts, cd=cd, dkx=dkx, frame_bd=frame_bd, t0=t0

 disk_pts = corot_pts
 disk_pts[*,1,*] = $
     corot_to_disk_lon(corot_pts[*,1,*], cd=cd, dkx=dkx, frame_bd=frame_bd, t0=t0)

 return, disk_pts
end
