;==================================================================================
; get_image_vector
;
;==================================================================================
function get_image_vector, cd, v

 nt = n_elements(cd)
 nv = n_elements(v)/3/nt

 orient = bod_orient(cd)
 xx = orient[0,*,*]
 yy = orient[2,*,*]

 x = v_inner(xx, v)
 y = v_inner(yy, v)

 p = dblarr(2,nv,nt)
 p[0,*,*] = x
 p[1,*,*] = y

 return, p
end
;==================================================================================
