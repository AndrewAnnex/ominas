;=============================================================================
; stereo_split
;
;=============================================================================
function stereo_split, cd, sep=sep

 sep2 = sep[0]/2.

 cds = [cam_clone_descriptor(cd), cam_clone_descriptor(cd)]
 xx = (bod_orient(cd))[0,*,*]

 bod_set_pos, cds[0], bod_pos(cd) - xx*sep2
 bod_set_pos, cds[1], bod_pos(cd) + xx*sep2

 return, cds
end
;=============================================================================
