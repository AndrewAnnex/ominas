;=============================================================================
; image_size
;
;=============================================================================
function image_size, cd

 class = class_get(cd[0])

 case class of 
  'MAP' : return, map_size(cd)
  'CAMERA' : return, cam_size(cd)
;  'CAMERA' : return, [transpose([cam_nx(cd)]), transpose([cam_ny(cd)])]
  default :
 endcase


end
