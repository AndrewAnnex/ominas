;===========================================================================
; glb_set_gm
;
;
;===========================================================================
pro glb_set_gm, gbxp, gm, nosynch=nosynch
@nv_lib.include
 gbdp = class_extract(gbxp, 'GLOBE')
 gbd = nv_dereference(gbdp)

 if(NOT keyword__set(nosynch)) then gbd.mass = gbd.mass * gm/gbd.gm
 gbd.gm = gm

 nv_rereference, gbdp, gbd
 nv_notify, gbdp, type = 0
end
;===========================================================================
