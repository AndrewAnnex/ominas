;==============================================================================
; bod_clone_descriptor
;
;
;==============================================================================
function bod_clone_descriptor, bdp
@nv_lib.include
 nv_notify, bdp, type = 1
 bd = nv_dereference(bdp)

 new_bd = bd
 new_bd.crd = cor_clone_descriptor(bd.crd)

 new_bdp = ptrarr(n_elements(bd))
 nv_rereference, new_bdp, new_bd

 return, new_bdp
end
;==============================================================================
