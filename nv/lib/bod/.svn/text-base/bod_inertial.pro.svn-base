;===========================================================================
; bod_inertial
;
; returns a body descriptor for the inertial frame
;
; NOTE -- do not free this descriptor when finished!!
;
;===========================================================================
function bod_inertial
common bod_inertial_block, bd
@nv_lib.include

 if(NOT keyword__set(bd)) then $
  begin 
   orient = dblarr(3,3)
   orient[0,*] = [1,0,0]
   orient[1,*] = [0,1,0]
   orient[2,*] = [0,0,1]

   bd = bod_init_descriptors(1, name='INERTIAL FRAME', orient=orient)
  end


 return, bd
end
;===========================================================================
