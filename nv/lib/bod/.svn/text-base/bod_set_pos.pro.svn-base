;===========================================================================
; bod_set_pos
;
;
;===========================================================================
pro bod_set_pos, bxp, pos
@nv_lib.include
 bdp = class_extract(bxp, 'BODY')
 bd = nv_dereference(bdp)

 bd.pos=pos

 nv_rereference, bdp, bd
 nv_notify, bdp, type = 0
end
;===========================================================================
