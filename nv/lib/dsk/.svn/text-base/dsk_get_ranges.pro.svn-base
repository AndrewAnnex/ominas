;===========================================================================
; dsk_get_ranges
;
;
;===========================================================================
function dsk_get_ranges, dkx

 sma = (dsk_sma(dkx[0]))[0,*]

 return, [transpose([sma[0], 0d,      0d]), $
          transpose([sma[1], 2d*!dpi, 1d10000])]
end
;===========================================================================
