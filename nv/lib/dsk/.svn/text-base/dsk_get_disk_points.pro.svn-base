;===========================================================================
; dsk_get_disk_points.pro
;
; Outputs are in disk body coordinates.
; Result is [n_points,3,2].
;
;===========================================================================
function _dsk_get_disk_points, dkxp, n_points, frame_bd=frame_bd
@nv_lib.include
 dkdp = class_extract(dkxp, 'DISK')

 r = dblarr(n_points, 3, 2)
 r[*,*,0] = dsk_get_inner_disk_points(dkdp, n_points, frame_bd=frame_bd)
 r[*,*,1] = dsk_get_outer_disk_points(dkdp, n_points, frame_bd=frame_bd)

 return, r
end
;===========================================================================



;===========================================================================
; dsk_get_disk_points.pro
;
; Outputs are in disk body coordinates.
; Result is [n_points,3,2].
;
;===========================================================================
function dsk_get_disk_points, dkxp, n_points, frame_bd=frame_bd, dlon=dlon
@nv_lib.include
 dkdp = class_extract(dkxp, 'DISK')

 r_inner = dsk_get_inner_disk_points(dkdp, n_points, frame_bd=frame_bd, dlon=dlon)
 r_outer = dsk_get_outer_disk_points(dkdp, n_points, frame_bd=frame_bd, dlon=dlon)

 np = n_elements(r_inner)/3
 r = dblarr(n_points, 3, 2)
 r[*,*,0] = r_inner
 r[*,*,1] = r_outer

 return, r
end
;===========================================================================



