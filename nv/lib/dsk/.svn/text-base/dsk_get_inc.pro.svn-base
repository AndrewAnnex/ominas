;===========================================================================
; dsk_get_inc
;
;
;===========================================================================
function dsk_get_inc, dkx, frame_bd
@nv_lib.include
 dkd = class_extract(dkx, 'DISK')

 if(NOT keyword_set(frame_bd)) then $
             nv_message, name='dsk_get_inc', 'frame_bd required.'

 inc = orb_get_inc(dkd, frame_bd)

 return, inc
end
;===========================================================================
