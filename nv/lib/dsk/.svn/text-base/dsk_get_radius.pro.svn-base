function dsk_get_radius, dkxp, dlon, frame_bd
@nv_lib.include

 r_inner = dsk_get_edge_radius(dkxp, dlon, frame_bd, /inner)
 r_outer = dsk_get_edge_radius(dkxp, dlon, frame_bd, /outer)

 s = size(r_inner)
 nt = n_elements(dkxp)
 nv = n_elements(r_inner)/nt

 r = dblarr(nv,2,nt)
 r[*,0,*] = r_inner
 r[*,1,*] = r_outer

 return, r
end
;===========================================================================
