;===========================================================================
; dsk_set_m
;
;
;===========================================================================
pro dsk_set_m, dkxp, m
@nv_lib.include
 dkdp = class_extract(dkxp, 'DISK')
 dkd = nv_dereference(dkdp)

 dkd.m = m

 nv_rereference, dkdp, dkd
 nv_notify, dkdp, type = 0
end
;===========================================================================



