pro dsk_set_inc, dkx, inc, frame_bd
@nv_lib.include
 dkd = class_extract(dkx, 'DISK')

 if(NOT keyword_set(frame_bd)) then $
             nv_message, name='dsk_set_inc', 'frame_bd required.'

 orb_set_inc, dkd, frame_bd, inc

end
;===========================================================================
