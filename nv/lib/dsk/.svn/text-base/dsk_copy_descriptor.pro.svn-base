pro _dsk_copy_descriptor, dkdp_dst, dkdp_src
 nv_notify, dkdp_src, type = 1
 new_dkd = nv_dereference(dkdp_src)

; new_dkd.bd = bod_clone_descriptor(dkd.bd)
 bod_copy_descriptor, new_dkd.bd, dsk_body(dkdp_src)

 nv_rereference, dkdp_dst, new_dkd
 nv_notify, dkdp_dst
end
;==============================================================================



;==============================================================================
; dsk_copy_descriptor
;
;
;==============================================================================
pro dsk_copy_descriptor, dkdp_dst, dkdp_src
@nv_lib.include
 nv_notify, dkdp_src, type = 1
 dkd_src = nv_dereference(dkdp_src)
 dkd_dst = nv_dereference(dkdp_dst)

 new_dkd = dkd_src
 new_dkd.bd = dkd_dst.bd

 bod_copy_descriptor, new_dkd.bd, dsk_body(dkdp_src)

 nv_rereference, dkdp_dst, new_dkd
 nv_notify, dkdp_dst
end
;==============================================================================



