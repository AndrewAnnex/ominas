;=============================================================================
; bcode
;
;=============================================================================
function bcode, string, offset

 bb = byte(string) + offset
 ss = string(bb)
 n = n_elements(ss)

 s = '[' + strtrim(ss[0],2)
 for i=1, n-1 do s = s + ',' + strtrim(ss[i],2)
 s = s + ']'

 return, s
end
