               dh_read(dh_fname(filename), silent=silent)


 dat = readpds(filename, label, silent=silent, dim=dim, nodata=nodata)
 n = dat.objects


 if(n EQ 1) then $
  begin
   return, dat.image
  end

stop

 data = ptrarr(n)
 dim_p = ptrarr(n)

 for i=0, n-1 do $
  begin
;   data[i] = ptr_new(...)
;   dim_p[i] = ptr_new(...)
  end

 return, data
end
