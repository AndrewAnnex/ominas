;=============================================================================
; gll_to_minas
;
;=============================================================================
function gll_to_minas, _od

 if(NOT keyword__set(_od)) then return, 0

 od = class_clone_descriptor(_od)

 cd = class_extract(od, 'CAMERA')
 bd = cam_body(cd)
 bod_set_orient, bd, gll_cmat_to_orient(bod_orient(bd))
 bod_set_pos, bd, bod_pos(bd)*1000d		; km --> m
 bod_set_vel, bd, bod_vel(bd)*1000d		; km/s --> m/s
 cam_set_body, cd, bd
 return, od


 return, od
end
;=============================================================================
