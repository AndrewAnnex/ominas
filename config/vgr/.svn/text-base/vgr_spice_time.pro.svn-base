;===========================================================================
; vgr_spice_time
;
;===========================================================================
function vgr_spice_time, label, dt=dt

 scet = vicar_vgrkey(label, 'SCET')
 exposure = vicar_vgrkey(label, 'EXP') / 1000d

 close_time = vgr_scet_to_image_time(scet)
 dt = -0.5d*exposure

 return, close_time
end
;===========================================================================



