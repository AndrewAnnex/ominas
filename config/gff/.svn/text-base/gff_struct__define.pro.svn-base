;===========================================================================
; gff_struct__define
;
;
;===========================================================================
pro gff_struct__define

 struct = $
    { gff_struct, $
	filename:	'', $
	unit:		0l, $
	offset:		0l, $
	dim_p:		ptr_new(), $


        idp :           ptr_new(), $    ; id pointer.
        xd:             ptr_new(), $    ; Affected descriptor.
        handler:        '', $           ; Event handler procedure.
        data_p :        ptr_new(), $    ; Pointer to associated user data.
        data:           0d, $           ; Scalar user data.
        type :          0 $             ; Type of event:
                                        ;  0 - set value
                                        ;  1 - get value
    }


end
;===========================================================================
