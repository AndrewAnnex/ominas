;==============================================================================================
; v_median
;
;==============================================================================================
function v_median, v

 dim = size(v, /dim)
 nv = dim[0]
 nt = 1
 if(n_elements(dim) GT 2) then nt = dim[2]

 result = dblarr(1,3,nt)

 for i=0, nt-1 do result[0,0,*] = median(v[*,0,*])
 for i=0, nt-1 do result[0,1,*] = median(v[*,1,*])
 for i=0, nt-1 do result[0,2,*] = median(v[*,2,*])
 
 return, result
end
;==============================================================================================
