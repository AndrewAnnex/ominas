;==============================================================================================
; v_stdev
;
;==============================================================================================
function v_stdev, v, mean=mean, mean2=mean2

 dim = size(v, /dim)
 nv = dim[0]
 nt = 1
 if(n_elements(dim) GT 2) then nt = dim[2]

 mean = v_mean(v)
 mean2 = v_mean(v^2)

 return, sqrt(mean2 - mean^2)
end
;==============================================================================================
