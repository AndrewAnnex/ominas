;==============================================================================================
; v_mean
;
;==============================================================================================
function v_mean, v

 dim = size(v, /dim)
 nv = dim[0]
 nt = 1
 if(n_elements(dim) GT 2) then nt = dim[2]

 return, reform(total(v,1), 1, 3, nt)/double(nv)/double(nt)
end
;==============================================================================================
