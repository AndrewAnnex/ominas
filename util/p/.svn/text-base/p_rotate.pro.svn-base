;=============================================================================
; p_rotate
;
;=============================================================================
function p_rotate, p, sin_theta, cos_theta

; pp = [ p[0]*cos_theta + p[1]*sin_theta, $
;       -p[0]*sin_theta + p[1]*cos_theta ]
 pp = [ p[0,*]*cos_theta + p[1,*]*sin_theta, $
       -p[0,*]*sin_theta + p[1,*]*cos_theta ]

 return, pp
end
;=============================================================================
