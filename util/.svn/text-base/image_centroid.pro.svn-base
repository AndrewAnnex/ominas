;============================================================================
; image_centroid
;
;
;============================================================================
function image_centroid, im

stop
 s = size(im)
 n = n_elements(im)

 x = dindgen(s[1]) # make_array(s[2], val=1d)
 y = dindgen(s[2]) ## make_array(s[1], val=1d)

 cx = total(x*im)/ s[1]
 cy = total(y*im)/ s[2]

 return, [cx, cy]
end
;============================================================================
