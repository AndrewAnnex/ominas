;=============================================================================
; circle
;
;
;=============================================================================
function circle, center, radius, np=np

 radius = float(radius)
 if(NOT keyword_set(np)) then np = 1000.
 
 theta = findgen(np) / np * 2d*!dpi

 x = radius * cos(theta)
 y = radius * sin(theta)

 return, [tr(x), tr(y)] + center #make_array(np, val=1.)
end
;=============================================================================
